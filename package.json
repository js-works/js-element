{
  "name": "js-elements",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/js-elements.esm.production.js",
  "module": "./dist/js-elements.esm.production.js",
  "exports": {
    ".": {
      "development": "./dist/js-elements.esm.development.js",
      "production": "./dist/js-elements.esm.production.js",
      "default": "./dist/js-elements.esm.production.js"
    },
    "./hooks": {
      "development": "./dist/js-elements-hooks.esm.development.js",
      "production": "./dist/js-elements-hooks.esm.production.js",
      "default": "./dist/js-elements-hooks.esm.production.js"
    },
    "./utils": {
      "development": "./dist/js-elements-utils.esm.development.js",
      "production": "./dist/js-elements-utils.esm.production.js",
      "default": "./dist/js-elements-utils.esm.production.js"
    },
    "./types": {
      "development": "./dist/js-elements-types.esm.development.js",
      "production": "./dist/js-elements-types.esm.production.js",
      "default": "./dist/js-elements-types.esm.production.js"
    }
  },
  "scripts": {
    "clean": "shx rm -rf ./build ./dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "npm run clean && cross-env NODE_OPTIONS=--max_old_space_size=4096 rollup --c rollup.config.js && tsc -p tsconfig.dist.json -d --emitDeclarationOnly --declarationDir dist/types",
    "dist": "npm run build && npm run zipsource",
    "zipsource": "shx rm -rf ./build/source && shx mkdir -p ./build/source && copyfiles -a ./* ./build/source && shx cp -r ./src ./build/source && shx mkdir -p ./dist/source && cd build && bestzip --force node ../dist/source/source.zip source && cd .."
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.1.0",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/addons": "^6.1.11",
    "@storybook/html": "^6.1.11",
    "@storybook/web-components": "^6.1.11",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.2",
    "bestzip": "^2.1.7",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "htm": "^3.0.4",
    "html-webpack-plugin": "^5.0.0-alpha.17",
    "lit-html": "^1.3.0",
    "npm-check-updates": "^10.2.5",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "shx": "^0.3.3",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
