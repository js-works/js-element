{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "js-elements/hooks": ["src/main/js-elements-hooks.ts"],
      "js-elements/utils": ["src/main/js-elements-utils.ts"],
      "js-elements": ["src/main/js-elements.ts"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "files": [
    "src/main/js-elements.ts",
    "src/main/js-elements-hooks.ts",
    "src/main/js-elements-utils.ts"
  ],
  "include": ["./src/main/**/*.*", "./src/stories/**/*.*"],
  "exclude": ["node_modules"]
}
